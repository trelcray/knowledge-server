{
  "name": "knowledge-server",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "dev": "tsnd --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "migrate": "npx knex migrate:latest --knexfile knexfile.ts",
